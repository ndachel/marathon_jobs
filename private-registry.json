{
  "id": "private-registry",
  "cpus": 0.5,
  "mem": 1024,
  "instances": 1,
  "container": {
    "type": "DOCKER",
    "volumes":[ 
      { 
        "containerPath": "/var/lib/registry", 
        "hostPath": "/opt/mount1/gluster/docker_storage", "mode": "RW" 
      } 
    ],
    "docker": {
      "image": "registry:2",
      "network": "BRIDGE",
      "portMappings": [ { "containerPort": 5000, "hostPort": 5000, "servicePort": 0, "protocol": "tcp", "labels": {} } ]
    }
  },
  "env": { "SETTINGS_FLAVOR": "local", "STORAGE_PATH": "/docker_storage" },
  "constraints": [["hostname","CLUSTER","172.16.1.20"]],
  "healthChecks" : [
    {
      "path":"/v2/",
      "portIndex": 0,
      "protocol":"HTTP",
      "gracePeriodSeconds": 30,
      "timeoutSeconds": 60,
      "maxConsecutiveFailures" : 5
    }
  ]
}
