{  
  "id":"/nginx-app",
  "groups":[
    {
      "id":"/nginx-app/containers",
      "apps": [
	{
	  "id": "/nginx-app/nginx-blue",
	  "cpus": 0.2,
	  "mem": 64.0,
	  "instances": 4,
	  "container": {
	    "type": "DOCKER",
	    "docker": {
	      "image": "nelsd/nginx-blue:latest",
	      "network": "BRIDGE",
	      "portMappings": [
		{ "containerPort": 80, "hostPort": 0, "servicePort": 10000, "protocol": "tcp" }
	      ]
	    }
	  },
	  "healthChecks": [
	    {
	      "protocol": "HTTP",
	      "portIndex": 0,
	      "path": "/",
	      "gracePeriodSeconds": 5,
	      "intervalSeconds": 20,
	      "maxConsecutiveFailures": 3
	    }
	  ]
	},

        {
          "id": "/nginx-app/nginx-green",
          "cpus": 0.2,
          "mem": 64.0,
          "instances": 4,
          "container": {
            "type": "DOCKER",
            "docker": {
              "image": "nelsd/nginx-green:latest",
              "network": "BRIDGE",
              "portMappings": [
                { "containerPort": 80, "hostPort": 0, "servicePort": 10002, "protocol": "tcp" }
              ]
            }
          },
          "healthChecks": [
            {
              "protocol": "HTTP",
              "portIndex": 0,
              "path": "/",
              "gracePeriodSeconds": 5,
              "intervalSeconds": 20,
              "maxConsecutiveFailures": 3
            }
          ]
        }

      ]
    }
  ]
}
