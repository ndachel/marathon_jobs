{
  "id": "jenkins-master",
  "instances": 1,
  "cpus": 0.2,
  "mem": 512,
  "healthChecks": [ { "path": "/", "port": 8888 } ],
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "spohnan/jenkins-mesos",
      "network": "HOST",
      "forcePullImage": true
    },
    "volumes": [
      { "containerPath": "/var/lib/jenkins", "hostPath": "/mnt/nfs/jenkins", "mode": "RW" }
    ]
  },
  "env": {
    "HOST": "jenkins-master.marathon.mesos",
    "JENKINS_JAVA_OPTIONS": "-Dhudson.slaves.NodeProvisioner.MARGIN=40 -Dhudson.slaves.NodeProvisioner.MARGIN0=0.75 -Xms512m -Xmx2000m -Djava.awt.headless=true -Djava.net.preferIPv4Stack=true -Dorg.apache.commons.jelly.tags.fmt.timeZone=America/Denver",
    "JENKINS_CMDLINE_OPTIONS": "--httpPort=8888",
    "JENKINS_PORT": "8888",
    "JENKINS_HOME": "/var/lib/jenkins",
    "JENKINS_FRAMEWORK_NAME": "Jenkins Scheduler",
    "JENKINS_MESOS_MASTER": "zk://{{ zookeeper_hostnames }}/mesos"
  }
}
